# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Image Processing Service Settings
HOST=0.0.0.0
PORT=8001
DATABASE_URL=sqlite:///./storage/databases/image_processing.db
ORIGINAL_IMAGES_DIR=./storage/images/original
MODIFIED_IMAGES_DIR=./storage/images/modified
TEMP_DIR=./storage/temp
MAX_FILE_SIZE=104857600
VARIANTS_COUNT=100
MIN_MODIFICATIONS_PER_VARIANT=100
PROCESSING_TIMEOUT=300
CONCURRENT_PROCESSING_LIMIT=5
LOG_FILE=./logs/image_processing.log

# Verification Service Settings
DATABASE_STORAGE_PATH=./storage/databases
TEMP_STORAGE_PATH=./storage/temp

# Inter-service Communication
VERIFICATION_SERVICE_URL=http://localhost:8002

